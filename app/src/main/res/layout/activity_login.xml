<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/scaled_bg"
        android:paddingLeft="@dimen/box_sides"
        android:paddingRight="@dimen/box_sides"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mainLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/testio"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:paddingBottom="105dp"
            android:paddingTop="115dp"/>

        <LinearLayout
            android:id="@+id/loginForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_object_height"
                android:orientation="horizontal"
                android:background="@drawable/white_rectangle"
                android:layout_marginBottom="@dimen/login_gaps">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_username"
                    android:paddingLeft="15dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:paddingRight="10dp"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:text="tesonet"
                    android:hint="@string/username"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textColor="@color/darker_grey"
                    android:textColorHint="@color/grey"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-light"
                    android:background="@color/transparent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_object_height"
                android:orientation="horizontal"
                android:background="@drawable/white_rectangle"
                android:layout_marginBottom="@dimen/login_gaps">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_lock"
                    android:paddingLeft="15dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:paddingRight="10dp"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:text="partyanimal"
                    android:hint="@string/password"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:textColor="@color/darker_grey"
                    android:textColorHint="@color/grey"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-light"
                    android:background="@color/transparent" />

            </LinearLayout>

            <TextView
                android:id="@+id/loginBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_object_height"
                android:background="@drawable/green_rectangle"
                android:gravity="center"
                android:text="@string/login"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>